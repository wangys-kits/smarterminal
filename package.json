{
  "name": "smarterminal",
  "version": "0.1.0",
  "description": "Smarterminal â€” Modern cross-platform terminal + file manager (Electron)",
  "main": "app/main.js",
  "author": "",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "postinstall": "electron-builder install-app-deps",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "dependencies": {
    "electron-store": "^8.2.0",
    "xterm": "^5.3.0"
  },
  "optionalDependencies": {
    "node-pty": "^1.0.0",
    "ssh2": "^1.15.0"
  },
  "devDependencies": {
    "electron": "^29.4.6",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.smarterminal.app",
    "productName": "Smarterminal",
    "files": [
      "app/**/*",
      "design-system/**/*",
      "docs/ui-ux-modern/xterm-theme.json"
    ],
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "category": "Development"
    }
  }
}
