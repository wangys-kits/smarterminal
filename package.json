{
  "name": "smarterminal",
  "version": "0.1.0",
  "description": "SmartTerminal â€” Modern cross-platform intelligent terminal + file manager (Electron)",
  "main": "app/main.js",
  "author": "",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "postinstall": "electron-builder install-app-deps",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "dependencies": {
    "electron-store": "^8.2.0",
    "node-pty": "^1.0.0",
    "tree-kill": "^1.2.2",
    "xterm": "^5.3.0"
  },
  "optionalDependencies": {
    "ssh2": "^1.15.0"
  },
  "devDependencies": {
    "electron": "^29.4.6",
    "electron-builder": "^24.13.3",
    "electron-rebuild": "^3.2.9"
  },
  "build": {
    "appId": "com.smartterminal.app",
    "productName": "SmartTerminal",
    "files": [
      "app/**/*",
      "design-system/**/*",
      "docs/ui-ux-modern/xterm-theme.json"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "build/icon.icns"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "category": "Development",
      "icon": "build/icons"
    }
  }
}
